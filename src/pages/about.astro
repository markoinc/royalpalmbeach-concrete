---
import BaseLayout from '../layouts/BaseLayout.astro';
import { siteConfig } from '../config/site';

const aboutSchema = {
  "@context": "https://schema.org",
  "@type": "AboutPage",
  "mainEntity": {
    "@type": "LocalBusiness",
    "name": siteConfig.name,
    "description": `${siteConfig.name} is a locally owned concrete contracting company serving ${siteConfig.address.city} and ${siteConfig.county}. We specialize in residential concrete services including driveways, patios, slabs, and decorative stamped concrete.`,
    "areaServed": siteConfig.serviceAreas.map(a => a.name),
    "telephone": siteConfig.phone,
    "address": {
      "@type": "PostalAddress",
      "addressLocality": siteConfig.address.city,
      "addressRegion": siteConfig.address.state,
      "postalCode": siteConfig.address.zip
    }
  }
};
---

<BaseLayout 
  title="About Us"
  description={`Learn about ${siteConfig.name} - your trusted local concrete contractors serving ${siteConfig.address.city} and ${siteConfig.county}, Florida.`}
  canonical={`${siteConfig.url}/about/`}
  schema={[aboutSchema]}
>
  <!-- Hero -->
  <section class="bg-gradient-to-br from-navy to-navy-dark text-white py-16 md:py-24">
    <div class="container text-center">
      <h1 class="text-4xl md:text-5xl font-bold mb-6">About {siteConfig.name}</h1>
      <p class="text-xl text-gray-300 max-w-3xl mx-auto">Your trusted local concrete contractors serving {siteConfig.address.city} and {siteConfig.county} with quality craftsmanship and exceptional customer service.</p>
    </div>
  </section>
  
  <!-- Main Content -->
  <section class="py-16 md:py-24">
    <div class="container">
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        <div>
          <h2 class="text-3xl font-bold text-navy mb-6">Quality Concrete Services You Can Trust</h2>
          <p class="text-gray-600 mb-4">
            {siteConfig.name} is a locally owned and operated concrete contracting company dedicated to providing exceptional service to homeowners and businesses throughout {siteConfig.county}.
          </p>
          <p class="text-gray-600 mb-4">
            Our team brings years of experience and expertise to every project, from simple concrete slabs to elaborate stamped concrete designs. We understand the unique challenges of {siteConfig.address.stateFullName}'s climate and soil conditions, ensuring your concrete installation is built to last.
          </p>
          <p class="text-gray-600 mb-6">
            We take pride in our work and treat every project—big or small—with the same level of care and attention to detail. Our commitment to quality materials, skilled craftsmanship, and honest communication has earned us the trust of homeowners throughout {siteConfig.address.city} and surrounding communities.
          </p>
          
          <div class="grid grid-cols-2 gap-4">
            <div class="bg-gray-50 p-4 rounded-lg text-center">
              <div class="text-3xl font-bold text-primary">100+</div>
              <div class="text-sm text-gray-600">Projects Completed</div>
            </div>
            <div class="bg-gray-50 p-4 rounded-lg text-center">
              <div class="text-3xl font-bold text-primary">5.0</div>
              <div class="text-sm text-gray-600">Star Rating</div>
            </div>
          </div>
        </div>
        
        <div class="bg-gradient-to-br from-gray-100 to-gray-200 rounded-xl aspect-square flex items-center justify-center">
          <svg class="w-32 h-32 text-navy/30" fill="currentColor" viewBox="0 0 24 24">
            <path d="M19 9h-1V4H6v5H5c-1.1 0-2 .9-2 2v5h2v4h14v-4h2v-5c0-1.1-.9-2-2-2zM8 6h8v3H8V6zm8 12H8v-4h8v4zm2-4h-1v-2H7v2H6v-3h12v3z"/>
          </svg>
        </div>
      </div>
    </div>
  </section>
  
  <!-- Our Services -->
  <section class="py-16 md:py-24 bg-gray-50">
    <div class="container">
      <h2 class="text-3xl font-bold text-center mb-12">Our Concrete Services</h2>
      
      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
        {siteConfig.services.map(service => (
          <a href={`/${service.slug}/`} class="bg-white p-6 rounded-xl shadow-sm hover:shadow-lg transition-all hover:-translate-y-1 border border-gray-100">
            <div class="w-12 h-12 bg-primary/10 rounded-lg flex items-center justify-center mb-4">
              <svg class="w-6 h-6 text-primary" fill="currentColor" viewBox="0 0 24 24">
                <path d="M19 9h-1V4H6v5H5c-1.1 0-2 .9-2 2v5h2v4h14v-4h2v-5c0-1.1-.9-2-2-2z"/>
              </svg>
            </div>
            <h3 class="text-lg font-bold mb-2">{service.name}</h3>
            <p class="text-gray-600 text-sm">{service.description}</p>
          </a>
        ))}
      </div>
    </div>
  </section>
  
  <!-- Why Choose Us -->
  <section class="py-16 md:py-24">
    <div class="container">
      <h2 class="text-3xl font-bold text-center mb-12">Why Choose {siteConfig.shortName}?</h2>
      
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        <div class="flex items-start gap-4">
          <div class="w-12 h-12 bg-primary rounded-lg flex items-center justify-center flex-shrink-0">
            <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 1L3 5v6c0 5.55 3.84 10.74 9 12 5.16-1.26 9-6.45 9-12V5l-9-4z"/>
            </svg>
          </div>
          <div>
            <h3 class="font-bold text-lg mb-2">Licensed & Insured</h3>
            <p class="text-gray-600">Fully licensed in {siteConfig.address.stateFullName} with comprehensive liability and workers' compensation insurance.</p>
          </div>
        </div>
        
        <div class="flex items-start gap-4">
          <div class="w-12 h-12 bg-primary rounded-lg flex items-center justify-center flex-shrink-0">
            <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
            </svg>
          </div>
          <div>
            <h3 class="font-bold text-lg mb-2">5-Star Reviews</h3>
            <p class="text-gray-600">Our customers love our work. Read our reviews to see why we're the trusted choice in {siteConfig.address.city}.</p>
          </div>
        </div>
        
        <div class="flex items-start gap-4">
          <div class="w-12 h-12 bg-primary rounded-lg flex items-center justify-center flex-shrink-0">
            <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>
            </svg>
          </div>
          <div>
            <h3 class="font-bold text-lg mb-2">Quality Guaranteed</h3>
            <p class="text-gray-600">We use premium 4,000 PSI concrete and proper reinforcement on every project.</p>
          </div>
        </div>
        
        <div class="flex items-start gap-4">
          <div class="w-12 h-12 bg-primary rounded-lg flex items-center justify-center flex-shrink-0">
            <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 24 24">
              <path d="M11.8 10.9c-2.27-.59-3-1.2-3-2.15 0-1.09 1.01-1.85 2.7-1.85 1.78 0 2.44.85 2.5 2.1h2.21c-.07-1.72-1.12-3.3-3.21-3.81V3h-3v2.16c-1.94.42-3.5 1.68-3.5 3.61 0 2.31 1.91 3.46 4.7 4.13 2.5.6 3 1.48 3 2.41 0 .69-.49 1.79-2.7 1.79-2.06 0-2.87-.92-2.98-2.1h-2.2c.12 2.19 1.76 3.42 3.68 3.83V21h3v-2.15c1.95-.37 3.5-1.5 3.5-3.55 0-2.84-2.43-3.81-4.7-4.4z"/>
            </svg>
          </div>
          <div>
            <h3 class="font-bold text-lg mb-2">Fair Pricing</h3>
            <p class="text-gray-600">Competitive, transparent pricing with detailed quotes. No hidden fees or surprises.</p>
          </div>
        </div>
        
        <div class="flex items-start gap-4">
          <div class="w-12 h-12 bg-primary rounded-lg flex items-center justify-center flex-shrink-0">
            <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 2C8.13 2 5 5.13 5 9c0 5.25 7 13 7 13s7-7.75 7-13c0-3.87-3.13-7-7-7z"/>
            </svg>
          </div>
          <div>
            <h3 class="font-bold text-lg mb-2">Local Experts</h3>
            <p class="text-gray-600">We know {siteConfig.county}'s unique soil and climate conditions for lasting results.</p>
          </div>
        </div>
        
        <div class="flex items-start gap-4">
          <div class="w-12 h-12 bg-primary rounded-lg flex items-center justify-center flex-shrink-0">
            <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 18c-4.41 0-8-3.59-8-8s3.59-8 8-8 8 3.59 8 8-3.59 8-8 8zm.5-13H11v6l5.25 3.15.75-1.23-4.5-2.67z"/>
            </svg>
          </div>
          <div>
            <h3 class="font-bold text-lg mb-2">On-Time Completion</h3>
            <p class="text-gray-600">We respect your time and complete projects on schedule, every time.</p>
          </div>
        </div>
      </div>
    </div>
  </section>
  
  <!-- CTA -->
  <section class="bg-gradient-to-r from-primary to-primary-dark py-16 text-white text-center">
    <div class="container">
      <h2 class="text-3xl font-bold mb-4">Ready to Start Your Project?</h2>
      <p class="text-lg opacity-90 mb-8">Contact us today for a free, no-obligation estimate.</p>
      <a href={`tel:${siteConfig.phoneRaw}`} class="btn btn-white text-lg px-8">
        Call {siteConfig.phone}
      </a>
    </div>
  </section>
</BaseLayout>
