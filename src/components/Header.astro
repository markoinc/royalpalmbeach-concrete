---
import { siteConfig } from '../config/site';
---

<!-- Top Bar -->
<div class="bg-slate text-white py-2 text-sm hidden md:block">
  <div class="container flex justify-between items-center">
    <div class="flex items-center gap-6">
      <span class="flex items-center gap-2">
        <svg class="w-4 h-4 text-primary" fill="currentColor" viewBox="0 0 24 24">
          <path d="M12 2C8.13 2 5 5.13 5 9c0 5.25 7 13 7 13s7-7.75 7-13c0-3.87-3.13-7-7-7z"/>
        </svg>
        Serving {siteConfig.county}
      </span>
      <span class="flex items-center gap-2">
        <svg class="w-4 h-4 text-primary" fill="currentColor" viewBox="0 0 24 24">
          <path d="M11.99 2C6.47 2 2 6.48 2 12s4.47 10 9.99 10C17.52 22 22 17.52 22 12S17.52 2 11.99 2zM12 20c-4.42 0-8-3.58-8-8s3.58-8 8-8 8 3.58 8 8-3.58 8-8 8zm.5-13H11v6l5.25 3.15.75-1.23-4.5-2.67z"/>
        </svg>
        Mon-Fri: 7AM-6PM | Sat: 8AM-4PM
      </span>
    </div>
    <div class="flex items-center gap-4">
      <span class="text-primary font-semibold">★★★★★ 5-Star Rated</span>
      <a href={`tel:${siteConfig.phoneRaw}`} class="flex items-center gap-2 font-bold text-primary hover:text-primary-light transition">
        <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
          <path d="M6.62 10.79c1.44 2.83 3.76 5.14 6.59 6.59l2.2-2.2c.27-.27.67-.36 1.02-.24 1.12.37 2.33.57 3.57.57.55 0 1 .45 1 1V20c0 .55-.45 1-1 1-9.39 0-17-7.61-17-17 0-.55.45-1 1-1h3.5c.55 0 1 .45 1 1 0 1.25.2 2.45.57 3.57.11.35.03.74-.25 1.02l-2.2 2.2z"/>
        </svg>
        {siteConfig.phone}
      </a>
    </div>
  </div>
</div>

<!-- Main Header -->
<header class="bg-white shadow-md sticky top-0 z-40">
  <div class="container">
    <div class="flex items-center justify-between py-4">
      <!-- Logo -->
      <a href="/" class="flex items-center gap-3">
        <div class="w-12 h-12 bg-gradient-to-br from-primary to-primary-dark rounded-lg flex items-center justify-center">
          <svg class="w-8 h-8 text-white" fill="currentColor" viewBox="0 0 24 24">
            <path d="M19 12h-2v3h-3v2h5v-5zM7 9h3V7H5v5h2V9zm14-6H3c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h18c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zm0 16.01H3V4.99h18v14.02z"/>
          </svg>
        </div>
        <div>
          <span class="text-xl font-bold text-slate block leading-tight">{siteConfig.shortName}</span>
          <span class="text-xs text-gray-500">{siteConfig.address.city}, FL</span>
        </div>
      </a>
      
      <!-- Desktop Navigation -->
      <nav class="hidden lg:flex items-center gap-8">
        <a href="/" class="font-medium text-gray-700 hover:text-primary transition">Home</a>
        <div class="relative group">
          <button class="font-medium text-gray-700 hover:text-primary transition flex items-center gap-1">
            Services
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
            </svg>
          </button>
          <div class="absolute top-full left-0 w-56 bg-white shadow-xl rounded-lg py-2 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200 mt-2">
            {siteConfig.services.map(service => (
              <a href={`/${service.slug}/`} class="block px-4 py-2 text-gray-700 hover:bg-sand hover:text-primary transition">
                {service.name}
              </a>
            ))}
          </div>
        </div>
        <a href="/locations/" class="font-medium text-gray-700 hover:text-primary transition">Service Areas</a>
        <a href="/about/" class="font-medium text-gray-700 hover:text-primary transition">About</a>
        <a href="/contact/" class="font-medium text-gray-700 hover:text-primary transition">Contact</a>
      </nav>
      
      <!-- CTA Button -->
      <div class="hidden md:flex items-center gap-4">
        <a href={`tel:${siteConfig.phoneRaw}`} class="btn btn-primary">
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
            <path d="M6.62 10.79c1.44 2.83 3.76 5.14 6.59 6.59l2.2-2.2c.27-.27.67-.36 1.02-.24 1.12.37 2.33.57 3.57.57.55 0 1 .45 1 1V20c0 .55-.45 1-1 1-9.39 0-17-7.61-17-17 0-.55.45-1 1-1h3.5c.55 0 1 .45 1 1 0 1.25.2 2.45.57 3.57.11.35.03.74-.25 1.02l-2.2 2.2z"/>
          </svg>
          {siteConfig.phone}
        </a>
      </div>
      
      <!-- Mobile Menu Button -->
      <button id="mobile-menu-btn" class="lg:hidden p-2 text-gray-700" aria-label="Toggle menu">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
        </svg>
      </button>
    </div>
  </div>
  
  <!-- Mobile Menu -->
  <div id="mobile-menu" class="hidden lg:hidden bg-white border-t">
    <div class="container py-4 space-y-4">
      <a href="/" class="block font-medium text-gray-700 hover:text-primary py-2">Home</a>
      {siteConfig.services.map(service => (
        <a href={`/${service.slug}/`} class="block text-gray-600 hover:text-primary py-2 pl-4">
          {service.name}
        </a>
      ))}
      <a href="/locations/" class="block font-medium text-gray-700 hover:text-primary py-2">Service Areas</a>
      <a href="/about/" class="block font-medium text-gray-700 hover:text-primary py-2">About</a>
      <a href="/contact/" class="block font-medium text-gray-700 hover:text-primary py-2">Contact</a>
      <a href={`tel:${siteConfig.phoneRaw}`} class="btn btn-primary w-full justify-center mt-4">
        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
          <path d="M6.62 10.79c1.44 2.83 3.76 5.14 6.59 6.59l2.2-2.2c.27-.27.67-.36 1.02-.24 1.12.37 2.33.57 3.57.57.55 0 1 .45 1 1V20c0 .55-.45 1-1 1-9.39 0-17-7.61-17-17 0-.55.45-1 1-1h3.5c.55 0 1 .45 1 1 0 1.25.2 2.45.57 3.57.11.35.03.74-.25 1.02l-2.2 2.2z"/>
        </svg>
        Call {siteConfig.phone}
      </a>
    </div>
  </div>
</header>

<script>
  const menuBtn = document.getElementById('mobile-menu-btn');
  const mobileMenu = document.getElementById('mobile-menu');
  
  menuBtn?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });
</script>
